@using OnlineShoppingApp.Areas.Admin.ViewModels.Banner
@model List<ListViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-controller="banner" asp-action="create" class="btn btn-secondary">Add new banner</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">banners</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Tittle</th>
                            <th>Description</th>
                            <th>Banner Page Name</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var banner in Model)
                        {
                            <tr>
                                <td>@banner.Tittle</td>
                                <td>@banner.Description</td>
                                <td>@banner.BannerPageType</td>
                                <td class="text-end">
                                    <a asp-controller="banner" asp-action="update" asp-route-id="@banner.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST"asp-controller="banner" asp-action="delete" asp-route-id="@banner.Id" id="banner-form-@banner.Id"></form>
                                    <button type="submit" form="banner-form-@banner.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>