@using OnlineShoppingApp.Areas.Admin.ViewModels.Blog
@model UpdateViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Blog</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                                     <form method="POST" asp-controller="blog" asp-action="update" enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label>Tittle</label>
                            <input asp-for="Tittle" class="form-control">
                            <span asp-validation-for="Tittle" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Description</label>
                            <input asp-for="Content" class="form-control">
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Author</label>
                            <input asp-for="Author" class="form-control">
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Image</label>
                            <input asp-for="MainImagePath" type="hidden">
                            <img src="~/assets/img/blog/@Model.MainImagePath" width="20%" />
                        </div>

                        <div class="form-group">
                            <label>Main Image</label>
                            <input asp-for="MainImage" class="form-control">
                            <span asp-validation-for="MainImage" class="text-danger"></span>
                        </div>


                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>

                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>