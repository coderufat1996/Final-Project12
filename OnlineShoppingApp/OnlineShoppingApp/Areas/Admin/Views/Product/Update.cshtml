@using OnlineShoppingApp.Areas.Admin.ViewModels.Product
@model UpdateViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Product</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-controller="product" asp-action="update" enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label>Name</label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            <input asp-for="Description" class="form-control">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Rate</label>
                            <input asp-for="Rate" class="form-control">
                            <span asp-validation-for="Rate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Price</label>
                            <input asp-for="Price" class="form-control">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Categories</label>
                            <select id="categoriess" asp-for="ProductCategoryId" asp-items="@(new SelectList(Model.ProductCategories ,
                                nameof(ProductCategoryViewModel.Id),  nameof(ProductCategoryViewModel.Title)))" class="form-select get-categories">
                            </select>
                            <span asp-validation-for="ProductCategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Sizes</label>
                            <select id="categoriess" asp-for="SizeIds" asp-items="@(new SelectList(Model.ProductSizes ,
                                nameof(ProductSizeViewModel.Id),  nameof(ProductSizeViewModel.Tittle)))" class="form-select get-categories">
                            </select>
                            <span asp-validation-for="SizeIds" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Image</label>
                            <input asp-for="MainImagePath" type="hidden">
                            <img src="~/assets/img/products/@Model.MainImagePath" width="20%" />
                        </div>
                        <div class="form-group">
                            <label>Main Image</label>
                            <input asp-for="MainImage" class="form-control">
                            <span asp-validation-for="MainImage" class="text-danger"></span>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>