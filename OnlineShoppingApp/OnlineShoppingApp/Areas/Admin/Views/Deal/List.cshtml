@using OnlineShoppingApp.DAL.Entities
@model List<Deal>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-controller="deal" asp-action="create" class="btn btn-secondary">Add new deal</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">deal</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Tittle</th>
                            <th>Offer</th>
                            <th>Description</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var deal in Model)
                        {
                            <tr>
                                <td>@deal.Title</td>
                                <td>@deal.Offer</td>
                                <td>@deal.Description</td>
                                <td class="text-end">
                                    <a asp-controller="deal" asp-action="update" asp-route-id="@deal.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST"asp-controller="deal" asp-action="delete" asp-route-id="@deal.Id" id="deal-form-@deal.Id"></form>
                                    <button type="submit" form="deal-form-@deal.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>