@using OnlineShoppingApp.Areas.Admin.ViewModels.Deal
@model CreateViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Deal</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-controller="deal" asp-action="create" enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label>Tittle</label>
                            <input asp-for="Title" class="form-control">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Offer</label>
                            <input asp-for="Offer" class="form-control">
                            <span asp-validation-for="Offer" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Description</label>
                            <input asp-for="Description" class="form-control">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Button Url</label>
                            <input asp-for="Url" class="form-control">
                            <span asp-validation-for="Url" class="text-danger"></span>
                        </div>

                         <div class="form-group">
                            <label>Photo</label>
                            <input  asp-for="Photo" class="form-control">
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>