@using OnlineShoppingApp.DAL.Entities
@model List<ProductCategory>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-controller="category" asp-action="create" class="btn btn-secondary">Add new category</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Categories</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.Title</td>
                                <td class="text-end">
                                    <a asp-controller="category" asp-action="update" asp-route-id="@category.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST"asp-controller="category" asp-action="delete" asp-route-id="@category.Id" id="category-form-@category.Id"></form>
                                    <button type="submit" form="category-form-@category.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>