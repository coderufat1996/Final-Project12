@using OnlineShoppingApp.Areas.Admin.ViewModels.Contact
@model UpdateViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Contact</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-controller="contact" asp-action="update" enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label>Tittle</label>
                            <input asp-for="Tittle" class="form-control">
                            <span asp-validation-for="Tittle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Addres Tittle</label>
                            <input asp-for="AddresTittle" class="form-control">
                            <span asp-validation-for="AddresTittle" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Addres Line</label>
                            <input asp-for="AddresLine" class="form-control">
                            <span asp-validation-for="AddresLine" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="Email" class="form-control">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label>Telephone</label>
                            <input asp-for="Telephone" class="form-control">
                            <span asp-validation-for="Telephone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Work Time</label>
                            <input asp-for="WorkTime" class="form-control">
                            <span asp-validation-for="WorkTime" class="text-danger"></span>
                        </div>


                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>