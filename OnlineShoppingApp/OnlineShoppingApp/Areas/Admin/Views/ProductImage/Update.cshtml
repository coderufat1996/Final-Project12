@using OnlineShoppingApp.Areas.Admin.ViewModels.ProductImage
@model UpdateViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Product Image</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-controller="productimage" asp-action="update" enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label>Image</label>
                            <input asp-for="ImagePath" type="hidden">
                            <img src="~/assets/img/products/@Model.ImagePath" width="20%" />
                        </div>

                        <div class="form-group">
                            <label>Image</label>
                            <input asp-for="Photo" class="form-control">
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>
